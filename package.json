{
  "name": "window-wrapper",
  "version": "5.0.2",
  "author": "Keith Jackson",
  "license": "MIT",
  "private": false,
  "type": "module",
  "main": "./dist/window-wrapper.js",
  "exports": {
    ".": "./dist/window-wrapper.js",
    "./package.json": "./package.json"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@types/node": "^20.19.5",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-defaults": "^9.0.0",
    "globals": "^16.4.0",
    "rollup": "^4.52.5",
    "terser": "^5.44.0",
    "typescript": "~5.9.3"
  },
  "scripts": {
    "init": "npm i && npm link",
    "lint": "eslint src/*.ts --fix",
    "clean": "rm -rf ./dist",
    "type-checking-watch": "tsc --watch --noemit",
    "minify": "terser ./dist/window-wrapper.js -o ./dist/window-wrapper.min.js",
    "build": "npm i && npm run clean && npm run lint && tsc && npm run minify && cp package.publish.json ./dist/package.json && npm link",
    "package": "npm run build && cp README.md ./dist/",
    "pack": "npm pack dist/",
    "publish": "npm publish dist/",
    "publish-dry-run": "npm publish dist/ --dry-run",
    "release": "npm run package && npm run pack && npm run publish"
  }
}
