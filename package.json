{
  "name": "window-wrapper",
  "version": "5.0.1",
  "author": "Keith Jackson",
  "license": "MIT",
  "private": false,
  "type": "module",
  "main": "./main.js",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/cjs/main.cjs"
    },
    "./package.json": "./package.json"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@types/node": "^20.19.5",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-defaults": "^9.0.0",
    "globals": "^16.4.0",
    "rollup": "^4.52.5",
    "terser": "^5.44.0",
    "typescript": "~5.9.3"
  },
  "scripts": {
    "init": "npm i && npm link",
    "lint": "eslint src/*.ts --fix",
    "clean": "rm -rf ./dist",
    "type-checking-watch": "tsc --watch --noemit",
    "build-es": "tsc",
    "build-cjs": "tsc --target es5 --module amd --moduleResolution node10 --outFile ./dist/cjs/main.cjs --verbatimModuleSyntax false",
    "minify-es": "terser ./dist/main.js -o ./dist/main.min.js",
    "minify-cjs": "terser ./dist/cjs/main.cjs -o ./dist/cjs/main.min.cjs",
    "build": "npm run init && npm run clean && npm run lint && npm run build-es && npm run build-cjs && npm run minify-es && npm run minify-cjs",
    "package": "npm run build && cp README.md ./dist/ && cp package.publish.json ./dist/package.json",
    "pack": "npm pack dist/",
    "publish": "npm publish dist/",
    "publish-dry-run": "npm publish dist/ --dry-run",
    "release": "npm run package && npm run pack && npm run publish"
  }
}
