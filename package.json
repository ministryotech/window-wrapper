{
  "name": "window-wrapper",
  "version": "4.0.0",
  "author": "Keith Jackson",
  "license": "MIT",
  "private": false,
  "keywords": [
    "stub",
    "window",
    "global",
    "wrapper"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryotech/window-wrapper.git"
  },
  "main": "window-wrapper.js",
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "esbuild": "^0.19.11",
    "eslint": "^7.32.0",
    "eslint-config-defaults": "^9.0.0",
    "typescript": "^5.1.6"
  },
  "scripts": {
    "lint": "eslint src/*.ts --fix",
    "ensure-dir": "mkdir ./dist",
    "clean": "rm -rf ./dist",
    "esbuild:min": "esbuild ./dist/window-wrapper.js --minify --outfile=./dist/window-wrapper.min.js",
    "tsc:build": "npx tsc",
    "tsc:package": "npm run clean && npm run ensure-dir && npm run tsc:build && npm run esbuild:min && cp README.md ./dist/ && cp package.json ./dist/",
    "publish:npm": "npm publish dist/",
    "publish:tar": "tar -czvf window-wrapper.tar.gz dist/",
    "release": "npm run lint && npm run tsc:package && npm run publish:npm && npm run publish:tar"
  }
}
