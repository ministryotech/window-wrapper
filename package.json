{
  "name": "window-wrapper",
  "version": "2.1.0",
  "author": "Keith Jackson",
  "license": "MIT",
  "private": false,
  "keywords": [
    "stub",
    "window",
    "global",
    "wrapper"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryotech/window-wrapper.git"
  },
  "main": "window-wrapper.js",
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-defaults": "^9.0.0",
    "uglify-js": "^3.17.4"
  },
  "scripts": {
    "lint": "eslint src/*.js --fix",
    "ensure-dir": "mkdir ./dist",
    "clean": "rm -rf ./dist",
    "uglify": "uglifyjs src/window-wrapper.js -m -o ./dist/window-wrapper.js && uglifyjs src/window-wrapper.js -m -c -o ./dist/window-wrapper.min.js",
    "build": "npm run clean && npm run ensure-dir && npm run uglify && cp README.md ./dist/ && cp package.json ./dist/",
    "publish-to-npm": "npm publish dist/",
    "build-tar-for-github": "tar -czvf window-wrapper.tar.gz dist/",
    "release": "npm run lint && npm run build && npm run publish-to-npm && npm run build-tar-for-github"
  }
}
