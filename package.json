{
  "name": "window-wrapper",
  "version": "5.0.0",
  "author": "Keith Jackson",
  "license": "MIT",
  "private": false,
  "type": "module",
  "main": "main.js",
  "exports": {
    ".": "./dist/main.js",
    "./package.json": "./package.json"
  },
  "keywords": [
    "stub",
    "window",
    "global",
    "wrapper"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ministryotech/window-wrapper.git"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@types/node": "^20.19.5",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-defaults": "^9.0.0",
    "globals": "^16.4.0",
    "terser": "^5.44.0",
    "typescript": "~5.9.3"
  },
  "scripts": {
    "init": "npm i && npm link",
    "lint": "eslint src/*.ts --fix",
    "clean": "rm -rf ./dist",
    "type-checking-watch": "tsc --watch --noemit",
    "build": "npm run init && npm run clean && npm run lint && tsc",
    "minify": "terser ./dist/main.js -o ./dist/main.min.js",
    "package": "npm run build && npm run minify && cp README.md ./dist/ && cp package.json ./dist/",
    "publish": "npm publish dist/",
    "publish-tar": "tar -czvf window-wrapper.tar.gz dist/",
    "release": "npm run package && npm run publish && npm run publish-tar"
  }
}
